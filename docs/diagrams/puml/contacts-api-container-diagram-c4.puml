@startuml "Contacts API Container Diagram C4Model"
!include <C4/C4_Container>

!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!define FONTAWESOME https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/font-awesome-5

!include ICONURL/common.puml
!include ICONURL/devicons/react.puml
!include ICONURL/devicons2/kotlin.puml
!include ICONURL/devicons/java.puml
!include ICONURL/devicons/postgresql.puml
!include FONTAWESOME/users.puml

Person(user, "User", "People who need to manage contact list", $sprite="users")

Container(spa, "Resume WEB (SPA)", "React, React Router", "The main interface with which the user interacts from a web browser", $sprite="react")
Container(apk, "Resume APP (Android App)", "Kotlin", "The main interface with which the user interacts from a mobile", $sprite="kotlin")
Container(api, "Resume API (REST)", "Java EE, SpringBoot", "Allows you to perform contact lists management operations.", $sprite="java")
ContainerDb(db, "Database", "PostgreSQL", "Holds info about contacts", $sprite="postgresql")

Rel(user, spa, "Uses", "HTTPS")
Rel(user, apk, "Uses", "HTTPS")
Rel(spa, api, "Uses", "HTTPS")
Rel(apk, api, "Uses", "HTTPS")
Rel_R(api, db, "Reads/Writes")
@enduml
